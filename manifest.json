{
    "manifest_version":2,

    "name":"Hololink",
    "description": "This is Hololink chrome extension",
    "version":"0.1",
    "icons":{
        "128":"img/icon_128.png",
        "48":"img/icon_48.png",
        "16":"img/icon_16.png"
    },

    "browser_action":{
        "default_icon":"img/icon_16.png",
        "default_popup":"popup.html"
    },

    "permissions": [
        "storage",
        "tabs",
        "https://hololink.co/*",
        "cookies",
        "https://*/",
        "webRequest",
        "webRequestBlocking"
    ],

    "content_scripts":[
        {
            "matches":["http://*/*", "https://*/*"],
            "js":["src/jquery-3.5.1.min.js", "src/bootstrap.bundle.min.js", "src/prep.js"],
            "css":["src/prep.css"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],

    "background":{
        "scripts":["src/background.js"]
    },

    "web_accessible_resources":["img/chat.svg", "img/highlighter.svg", "hololink-sidebar.html"]
}