{
    "manifest_version":2,

    "name":"Hololink",
    "description": "this extension is for highting the world",
    "version":"0.1",
    "icons":{
        "128":"img/icon_128.png",
        "48":"img/icon_48.png",
        "16":"img/icon_16.png"
    },

    "browser_action":{
        "default_icon":"img/icon_16.png",
        "default_popup":"popup.html"
    },

    "permissions": [
        "storage",
        "tabs",
        "https://hololink.co/*",
        "cookies",
        "https://*/",
        "webRequest",
        "webRequestBlocking"
    ],

    "content_scripts":[
        {
            "matches":["http://*/*"],
            "js":["src/getHtml.js"]
        }   
    ],

    "background":{
        "scripts":["src/background.js"]
    }
}